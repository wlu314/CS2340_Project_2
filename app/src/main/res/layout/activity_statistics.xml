<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Statistics"
    style="@style/ScreenBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/CardBackGround" />
        <TextView
            android:id="@+id/titleStats"
            android:text="Stats"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            style="@style/TextColor"/>
        <ImageButton
            android:id="@+id/profileBotton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ImageChange"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/profile_botton"
            android:contentDescription="profile"
            android:onClick="buttonClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dateRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextColor"
            android:text="Past Year"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:columnCount="2"
        android:rowCount="2">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            style="@style/CardBackGround"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/topArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekend"
                android:textStyle="bold"
                android:textSize="20sp"
                style="@style/TextColor"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/topArtistDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Weekend was your top artist in the last year"
                android:textSize="15sp"
                style="@style/TextColorSub"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            style="@style/CardBackGround"
            >
            <TextView
                android:id="@+id/topListenser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 0.025%"
                style="@style/TextColor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/topListenserDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="you're in the top 0.015% of listeners in the past year"
                style="@style/TextColorSub"
                android:textSize="15sp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            style="@style/CardBackGround">

            <TextView
                android:id="@+id/adjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joyful"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                style="@style/TextColor"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/adjectiveDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="your mood in the past year has been joyful"
                style="@style/TextColorSub"
                android:textSize="15sp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            style="@style/CardBackGround">
            <TextView
                android:id="@+id/totalHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,690 Hours"
                style="@style/TextColor"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/totalHoursDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,690 is nearly 300 days! "
                style="@style/TextColorSub"
                android:textSize="15sp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:columnCount="1"
        android:rowCount="1">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            style="@style/CardBackGround"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:text="Top Song"
                style="@style/TextColor"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="215dp"
                android:layout_marginTop="15dp"
                android:text="Description"
                style="@style/TextColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="215dp"
                android:layout_marginTop="39dp"
                android:paddingEnd="10dp"
                android:text="Good 4 U has been described as an upbeat song blending rock, pop, punk, and alternative styles."
                style="@style/TextColorSub"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/sampleImage"
                android:layout_width="68dp"
                android:layout_height="70dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="46dp"
                android:src="@drawable/sample_artist" />

            <TextView
                android:id="@+id/TopSongTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="46dp"
                android:text="Good 4 U"
                style="@style/TextColorSub"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/TopSongAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="63dp"
                android:text="Sour"
                style="@style/TextColorSub"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/TopSongArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="78dp"
                android:text="by Olivia Rodrigo"
                style="@style/TextColorSub"
                android:textSize="10dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/TopSongSpotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                android:layout_marginTop="95dp"
                android:text="Play on Spotify Now!"
                style="@style/TextColorSub"
                android:textSize="8dp"
                android:textStyle="italic" />


        </androidx.cardview.widget.CardView>

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:columnCount="1"
        android:rowCount="1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            style="@style/CardBackGround"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Recommendation"
                style="@style/TextColor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/recommendation1"
                        android:layout_width="68dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sample_artist"/>

                    <TextView
                        android:id="@+id/recommedationtext1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olivia Rodrigo"
                        android:textSize="10dp"
                        style="@style/TextColorSub"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/recommendation2"
                        android:layout_width="68dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sample_artist"/>

                    <TextView
                        android:id="@+id/recommedationtext2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olivia Rodrigo"
                        android:textSize="10dp"
                        style="@style/TextColorSub" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/recommendation3"
                        android:layout_width="68dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sample_artist"/>

                    <TextView
                        android:id="@+id/recommedationtext3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olivia Rodrigo"
                        android:textSize="10dp"
                        style="@style/TextColorSub" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="25dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/recommendation4"
                        android:layout_width="68dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sample_artist"/>

                    <TextView
                        android:id="@+id/recommedationtext4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olivia Rodrigo"
                        android:textSize="10dp"
                        style="@style/TextColorSub" />
                </LinearLayout>

                <!-- Repeat the LinearLayout block for each additional recommendation -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/darker_black"
        app:itemIconSize="1dp"
        app:itemIconTint="@drawable/bottom_navigation_bar_icon_color"
        app:itemTextColor="@drawable/bottom_navigation_bar_icon_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationView"
        app:menu="@menu/bottom_nav_menu"
        />

</LinearLayout>
